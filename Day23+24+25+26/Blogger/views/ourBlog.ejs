<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head.ejs') %>
    <title>Read-Blogs</title>
    <style>
        /* Scoped blog styles */
        .blog-container {
          max-width: 800px;
          margin: 2rem auto;
          padding: 0 1rem;
        }
    
        .blog-card {
          border: 1px solid #ccc;
          border-radius: 10px;
          margin-bottom: 2rem;
          overflow: hidden;
          box-shadow: 0 2px 6px rgba(0,0,0,0.1);
          background: #fff;
        }
    
        .blog-image {
          width: 100%;
          height: auto;
          max-height: 400px;
          object-fit: cover;
        }
    
        .blog-content {
          padding: 1rem;
        }
    
        .blog-title {
          font-size: 1.5rem;
          margin-bottom: 0.5rem;
          color: #333;
        }
    
        .blog-body {
          font-size: 1rem;
          color: #555;
        }
      </style>
    
</head>
<body>
    <%- include('./partials/nav.ejs') %>
    <p>READ the Latest Blogs !!</p>
    <div class="blog-container">
        <% blogs.forEach(blog => { %>
          <div class="blog-card">
            <img src="<%= blog.coverImage %>" alt="Cover Image" class="blog-image">
            <div class="blog-content">
              <h2 class="blog-title"><%= blog.title %></h2>
              <p class="blog-body"><%= blog.body %></p>
            </div>
          </div>
        <% }); %>
      </div>

</body>
<%- include('./partials/scripts.ejs') %>
</html>